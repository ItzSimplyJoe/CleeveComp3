            ]
            ]
        print("ready")
        self.porcupine = None
        pa = None

        window = sg.Window("Virtual Asisstant", layout)

        vcl = VoiceCommandListener()
        p1 = multiprocessing.Process(target=vcl.listenForVoiceCommands)
        p2 = multiprocessing.Process(target=vcl.listenForTextCommands, args=[window])
